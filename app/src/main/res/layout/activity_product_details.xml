<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProductDetails">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImage_details"
        android:layout_width="176dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/imageview_round_corner"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- Company Details -->
    <TextView
        android:id="@+id/company_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:hint="default"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productImage_details"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/productName_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/company_details"
        app:layout_constraintTop_toBottomOf="@+id/company_details" />

    <!-- Category -->
    <TextView
        android:id="@+id/category_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/productName_details"
        app:layout_constraintTop_toBottomOf="@+id/productName_details" />

    <!-- Ingredients -->
    <TextView
        android:id="@+id/ingredients_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/category_details"
        app:layout_constraintTop_toBottomOf="@+id/category_details" />

    <!-- Like Button -->
    <ImageButton
        android:id="@+id/btn_like_details"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@color/background"
        android:contentDescription="Like"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/ingredients_details"
        app:layout_constraintTop_toBottomOf="@+id/ingredients_details"
        app:srcCompat="@drawable/before_likebtn_selected" />

    <!-- Like Count -->
    <TextView
        android:id="@+id/like_amount_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/btn_like_details"
        app:layout_constraintTop_toTopOf="@+id/btn_like_details" />

    <!-- Ingredient 1 Label -->
    <TextView
        android:id="@+id/ing_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:text="AAA성분"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/like_amount_details" />

    <!-- Ingredient 1_1 -->
    <TextView
        android:id="@+id/ing_1_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="A"
        app:layout_constraintEnd_toStartOf="@+id/ing_1_1_checked"
        app:layout_constraintStart_toStartOf="@+id/ing_1"
        app:layout_constraintTop_toBottomOf="@+id/ing_1" />

    <ImageView
        android:id="@+id/ing_1_1_checked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ing_1_1"
        app:srcCompat="@drawable/uncheck_icon" />

    <TextView
        android:id="@+id/ing_1_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="AAA"
        app:layout_constraintEnd_toStartOf="@+id/ing_1_2_checked"
        app:layout_constraintStart_toStartOf="@+id/ing_1"
        app:layout_constraintTop_toBottomOf="@+id/ing_1_1" />


    <ImageView
        android:id="@+id/ing_1_2_checked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ing_1_2"
        app:srcCompat="@drawable/uncheck_icon" />

    <!-- Additional Ingredients Views... -->

</androidx.constraintlayout.widget.ConstraintLayout>